<div class="row">

    <% for(var i=0; i < audio_book.length; i++) {%>
        <% if( i%3!=0 ) {%> 
            <div class="col-sm">
                <div class="card w-100 card-border mb-5">
                    <center><i class="iaudio fas fa-headphones-alt"></i></center>
                    <div class="card-body">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%= audio_book[i].Titulo %></li>
                        <li class="list-group-item"><%= audio_book[i].Autor %></li>
                        <li class="list-group-item"><%= audio_book[i].Genero %></li>
                        <li class="list-group-item"><%= audio_book[i].Duracion %></li>
                      </ul>
                    <a href="#" class="btn btn-sm btn-outline-success">Descargar</a>
                    <a href="/edit_audio/<%= audio_book[i]._id%>" class="btn btn-sm btn-outline-info">Editar</a>
                    <a href="/delete_audio/<%= audio_book[i]._id %>" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </div>
                </div>
            </div>      
        <%} else {%>  
        </div>    
        <div class="row">
            <div class="col-sm">
                <div class="card w-100 card-border mb-5">
                    <center><i class="iaudio fas fa-headphones-alt"></i></center>
                    <div class="card-body">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%= audio_book[i].Titulo %></li>
                        <li class="list-group-item"><%= audio_book[i].Autor %></li>
                        <li class="list-group-item"><%= audio_book[i].Genero %></li>
                        <li class="list-group-item"><%= audio_book[i].Duracion %></li>
                      </ul>
                    <a href="#" class="btn btn-sm btn-outline-success">Descargar</a>
                    <a href="/edit_audio/<%= audio_book[i]._id%>" class="btn btn-sm btn-outline-info">Editar</a>
                    <a href="/delete_audio/<%= audio_book[i]._id %>" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </div>
                </div>
            </div>      
        <%}%>
    <%}%>
</div>

