<%- layout('layouts/main') %>
<br>
<div class="row mb-10">
  <div class="col-md-8 mx-auto text-center ">
    <h1> <font face = "Cursive"> Agregar libro al inventario</font> </h1>
    <p>Favor de llenar el siguiente formulario</p>
  </div>
</div>

<!--Formulario-->
<div class="row mb-5">
    <div class="col-md-4 offset-md-4">
      <div class="card mt-4 text-center">
        <div class="card-header" style="background: linear-gradient(0deg, rgb(30, 172, 255)40%,rgb(7, 106, 255))">
          <h4>Agregar nuevo libro</h4>
        </div>
        <div class="card-body" style="background-color: #ffffff;">
            <form action="/add" method="POST">
                <div class="form-group mb-3">
                    <input type="text" name="Titulo" placeholder="Inserta un titulo" class="form-control">
                </div> 
                <div class="form-group mb-3">                            
                    <input type="text" name="Autor" placeholder="Nombre del autor" class="form-control">
                </div>  
                <div class="form-group mb-3">                            
                    <input type="text" name="Genero" placeholder="Genero del libro" class="form-control">
                </div>  
                <div class="form-group mb-3">                            
                    <input type="text" name="Cantidad" placeholder="Cantidad de libros" class="form-control">
                </div>  
                <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>                                           
            </form>
        </div>
      </div>
    </div>
</div>


